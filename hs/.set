# 言語共通コマンド
alias contest='acc new'
function next () {
	local log=next-`date +%Y%m%d-%H%M%S`.log
	acc add | tee -a $log
	local line=`grep -e "https://atcoder.jp/contests/" $log`
	local url=${line/"[NETWORK] GET: "/""}
	open $url
}

# 言語別コマンド(提供コマンドは全言語共通とする)
alias run='runghc Main.hs'
function test () {
	local log=test-`date +%Y%m%d-%H%M%S`.log
	oj test -c "runghc Main.hs" -N | tee -a $log
	code ./$log
}
function submit () {
	local log=submit-`date +%Y%m%d-%H%M%S`.log
	acc submit -s -- -y | tee -a $log
	code ./$log
}
alias edit='code ./Main.hs'
